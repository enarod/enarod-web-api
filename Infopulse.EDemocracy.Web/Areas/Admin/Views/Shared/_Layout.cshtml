<!DOCTYPE html>
<html>
<head>
	<meta charset="utf-8" />
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<title>@ViewBag.Title - Admin</title>
	<script src="~/Scripts/jquery-2.1.4.js"></script>
	<script src="~/Scripts/jquery-ui-1.11.4.js"></script>
	<script src="~/Scripts/knockout-3.3.0.js"></script>
	<script src="~/Scripts/knockout-postbox.js"></script>
	<script src="~/Scripts/moment.js"></script>
	<link rel="stylesheet" href="~/Content/themes/base/all.css">
	<link rel="stylesheet" href="~/Content/bootstrap.css">
	<link rel="stylesheet" href="~/Content/bootstrap-theme.css">
	<link rel="stylesheet" href="~/Content/admin.css">
	<link rel="stylesheet" href="~/Content/login.css">
</head>
<body>
	<nav>
		<!-- see example here: http://getbootstrap.com/examples/navbar-fixed-top/ -->
		<div class="container-fluid">
			<div class="navbar-header">
				<a class="navbar-brand" href="#">eNarod Admin</a>
			</div>

			<div id="navbar" class="navbar-collapse collapse">
				<ul class="nav navbar-nav navbar-right">
					<li><a href="#" data-bind="click: showLoginDialog, visible: !isAuthorized()">Sign in</a></li>
					<li><a href="#" data-bind="click: signOut, visible: isAuthorized()">Sign out</a></li>
				</ul>
			</div>

			<div id="loginForm" title="Sign In" class="">
				<div class="row caption">
					<p class="col-md-12">Please login</p>
				</div>
				<div class="row formLine">
					<span class="col-md-4">Login</span>
					<input type="email" class="col-md-8" data-bind="value: login" />
				</div>
				<div class="row formLine">
					<span class="col-md-4">Password</span>
					<input type="password" class="col-md-8" data-bind="value: password" />
				</div>
				<div class="row formLine">
					<span class="errorText col-md-12" data-bind="text: errorText" ></span>
				</div>
			</div>

		</div>
	</nav>
	<div class="container body-content">
		@RenderBody()
	</div>


</body>
</html>